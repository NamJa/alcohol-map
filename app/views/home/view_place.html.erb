<style>
img {
    max-height: 500px;
}
</style>

<%= render "layouts/nav" %>

<div class="container" style="margin-top: 20px;margin-bottom: 20px;">
    <div class="thumbnail">
        <div style="margin-left:15px;margin-right:15px;" class="caption-full">
            <h3><span class="label label-primary"><%= @place.category %></span></h3>
            <h3><b><%= @place.placename %></b></h3>
            <p><%= @place.address %></p>
            <h3>
                <a href="<%= @place.website %>" target="_blank" style="text-decoration:none;"><span class="label label-success">웹사이트</span></a>
                <a href="https://www.google.com/maps/dir//<%= URI.encode(@place.address) %>" target="_blank" style="text-decoration:none;"><span class="label label-info">길찾기</span></a>
            </h3>
            <h3>
                <span class="label label-danger">
                    <% if @place.rating_count != 0 %>
                        <span id="stars-existing" class="starrr" data-rating="<%= @place.rating / @place.rating_count %>"></span>
                        <%= (@place.rating.to_f / @place.rating_count.to_f).round(1) %>/5.0
                    <% else %>
                        <span id="stars-existing" class="starrr" data-rating="0"></span>
                        0.0/5.0
                    <% end %>
                </span>
            </h3>
            <hr>
            <p style="white-space: pre-wrap;"><%= sanitize @place.content, tags: %w(strong em a img image embed iframe span), attributes: %w(href src width height style) %></p>
            <br>
        </div>
    </div>
    <a class="btn btn-default" href="<%= $root %>"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> 지도</a>
    <div class="pull-right">
        <a class="btn btn-default" href="<%= $root %>edit?id=<%= @place.id %>"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> 수정</a>
    </div>
</div>

<script>
    $( "img" ).addClass( "img-responsive" );
    $('.starrr').starrr({
      change: function(e, value){
        window.location.href = "<%= $root %>home/rating_submit?id=<%= @place.id %>&score=" + value;
      }
    })
</script>