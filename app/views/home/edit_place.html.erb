<div class="container" style="margin-top: 20px;margin-bottom: 20px;">
    <form action="<%= $root %>home/edit_place_submit" onsubmit="return validateForm()" method="post">
        <div class="thumbnail">
            <div style="margin-left:15px;margin-right:15px;" class="caption-full">
                <h4><span class="label label-primary"><%= @place.category %></span></h4>
                <h3><b><%= @place.placename %></b></h3>
                <p><%= @place.address %></p>
                <h4>
                    <a href="<%= @place.website %>" target="_blank" style="text-decoration:none;"><span class="label label-success">웹사이트</span></a>
                    <a href="https://www.google.com/maps/dir//<%= URI.encode(@place.address) %>" target="_blank" style="text-decoration:none;"><span class="label label-info">길찾기</span></a>
                    <span class="label label-danger">
                        <% if @place.rating_count != 0 %>
                            <span id="stars-existing" class="starrr" data-rating="<%= @place.rating / @place.rating_count %>"></span>
                            <%= (@place.rating.to_f / @place.rating_count.to_f).round(1) %>/5.0
                        <% else %>
                            <span id="stars-existing" class="starrr" data-rating="0"></span>
                            0.0/5.0
                        <% end %>
                    </span>
                </h4>
                <hr>
                <input type="hidden" name="id" value="<%= @place.id %>">
                <input type="text" name="website" id="website" class="form-control" placeholder="웹사이트" value="<%= @place.website %>"><br>
                <textarea class="form-control" rows="10" id="content" name="content"><%= @place.content %></textarea><br>
            </div>
        </div>
        <a class="btn btn-default" href="<%= $root %>"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> 지도</a>
        <div class="pull-right">
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 확인</button>
            <a class="btn btn-default" href="<%= $root %>place?id=<%= @place.id %>"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 취소</a>
        </div>
    </form>
</div>

<script>
    function validateForm() {
        var content = document.getElementById("content").value;
        var website = document.getElementById("website").value;
        if (content == null || content == "") {
            alert("내용을 입력하세요.");
            document.getElementById("content").focus();
            return false;
        }
        else if (website == null || website == "") {
            alert("웹사이트를 입력하세요.");
            document.getElementById("website").focus();
            return false;
        }
    }
    
    $('.starrr').starrr({
      change: function(e, value){
        window.location.href = "<%= $root %>home/rating_submit?id=<%= @place.id %>&score=" + value;
      }
    })
</script>