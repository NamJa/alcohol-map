<div class="container">
    <h2>요청 관리</h2>
    <% Request.all.each do |r| %>
        <div class="well well-sm col-md-12">
            <span class="pull-right"><span class="label label-default"><%= r.created_at.in_time_zone("Seoul").strftime("%Y-%m-%d %H:%M") %></span> <a class="btn btn-default btn-xs" href="<%= $root %>home/add_place/?id=<%= r.id %>&key=<%= @key %>"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></a> <a class="btn btn-default btn-xs" href="<%= $root %>home/request_delete/?id=<%= r.id %>&key=<%= @key %>"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></span>
            <span class="label label-primary"><%= r.category %></span> <b><%= r.placename %></b> <%= r.address %> <a class="btn btn-success btn-xs" href="<%= r.website %>"><%= r.website %></a>
            <br>
        </div>
    <% end %>
    <h2>장소 관리</h2>
    <% Place.all.each do |p| %>
        <div class="well well-sm col-md-12">
            <span class="pull-right"><span class="label label-default"><%= p.created_at.in_time_zone("Seoul").strftime("%Y-%m-%d %H:%M") %></span> <a class="btn btn-default btn-xs" href="<%= $root %>home/place_delete/?id=<%= p.id %>&key=<%= @key %>"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></span>
            <span class="label label-primary"><%= p.category %></span> <b><%= p.placename %></b> <%= p.address %> <a class="btn btn-success btn-xs" href="<%= p.website %>"><%= p.website %></a>
            <br>
        </div>
    <% end %>
</div>